{
    "name": "symfony-cmf/simple-cms-bundle",
    "type": "symfony-bundle",
    "description": "A simple CMS bundle based on the Symfony CMF",
    "keywords": ["Symfony CMF", "CMS"],
    "homepage": "http://cmf.symfony.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Symfony CMF Community",
            "homepage": "https://github.com/symfony-cmf/SimpleCmsBundle/contributors"
        }
    ],
    "prefer-stable": true,
    "require": {
        "php": ">=7.3",
        "symfony/framework-bundle": "^4.0|^5.0|^6.0|^7.0",
        "symfony-cmf/core-bundle": "dev-master",
        "symfony-cmf/routing-bundle": "^2.0 || ^3.0",
        "symfony-cmf/menu-bundle": "dev-master",
        "symfony-cmf/content-bundle": "dev-master",
        "doctrine/phpcr-bundle": "^3.0",
        "doctrine/phpcr-odm": "^2.0"
    },
    "require-dev": {
        "symfony-cmf/testing": "^2.1",
        "sonata-project/block-bundle": "^3.14",
        "sonata-project/core-bundle": "^3.15",
        "sonata-project/doctrine-phpcr-admin-bundle": "^2.2",
        "symfony/monolog-bundle": "^3.3",
        "phpunit/phpunit": "^7.5"
    },
    "suggest": {
        "symfony-cmf/create-bundle": "to allow the admin to edit pages inline (~1.1)",
        "sonata-project/doctrine-phpcr-admin-bundle": "to provide an admin interface for editing content (~1.1)",
        "ivory/ckeditor-bundle": "to provide a CKEditor in the admin interface"
    },
    "repositories": [
        { "type": "vcs", "url": "git@github.com:NETFORMIC-GmbH/symfony-cmf-core-bundle.git" },
        { "type": "vcs", "url": "git@github.com:NETFORMIC-GmbH/symfony-cmf-content-bundle.git" },
        { "type": "vcs", "url": "git@github.com:NETFORMIC-GmbH/symfony-cmf-menu-bundle.git" }
    ],
    "autoload": {
        "psr-4": {
            "Symfony\\Cmf\\Bundle\\SimpleCmsBundle\\": ""
        }
    },
    "conflict": {
        "jms/di-extra-bundle": "<1.3"
    }
}
